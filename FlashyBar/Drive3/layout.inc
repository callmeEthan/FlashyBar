[MeterBar]
Meter=BAR
MeasureName=measureUsedDiskSpace
X=0
Y=20
H=3
W=#CURRENTCONFIGWIDTH#
;BarColor=255,255,255,240
BarColor="[MeasureColorTrigger]"
BarOrientation=Horizontal
SolidColor=255,255,255,60
DynamicVariables=1

[Flash]
Meter=Image
ImageName=#@#Flash.png
ImageAlpha=255
X=0
Y=0r
W=#Flashwidth#
H=3
DynamicVariables=1

[MeterLabel]
Meter=STRING
Text=#Diskname#
StringStyle=BOLD
X=2
Y=0
H=14
W=205
FontFace=#FontFace#
FontColor=#FontColor#
FontSize=#FontSize#
AntiAlias=1
SolidColor=255,255,255,1
LeftMouseUpAction=#MouseAction#

[MeterLoad]
Meter=STRING
MeasureName=measureTotalDisk
FontFace=#FontFace#
FontColor=255,255,255,120
FontSize=#FontSize#
AntiAlias=1
StringAlign=left
Text="%1B"
X=30
Y=0r
NumOfDecimals=0
AutoScale=1

[MeterInfo]
Meter=STRING
MeasureName=measureDiskSpace
FontFace=#FontFace#
FontColor=#FontColor#
FontSize=#FontSize#
AntiAlias=1
StringAlign=Right
Text="%1B free"
X=(#CURRENTCONFIGWIDTH#-2)
Y=0r
NumOfDecimals=1
AutoScale=1